#!/usr/bin/env php
<?php
# vim: set ft=php

use mgirouard\Linode\Console\Application;
use GuzzleHttp\Client;

require __DIR__ . '/../vendor/autoload.php';
define('LINODE_API_KEY', getenv('LINODE_API_KEY'));

$app = new Application(
    json_decode(file_get_contents(__DIR__ . '/../res/api-spec.json')),
    new Client()
);
$app->run();
